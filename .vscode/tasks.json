{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CompileTest",
            "type": "cppbuild",
            "command": "C:/TDM-GCC-64/bin/gcc.exe",
            "args":[
                "-Wall",
                "-O0",
                "-g3",
                "${fileDirname}/*.c",
                "-o",
                "${fileDirname}/output/program.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[
                "$gcc"
            ]
        }
    ]
}