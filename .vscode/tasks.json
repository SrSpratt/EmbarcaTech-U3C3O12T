{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create Debug Directory",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (-Not (Test-Path 'debug')) { New-Item -ItemType Directory -Path 'debug' }"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "CompileTest",
            "type": "cppbuild",
            "command": "gcc",
            "args": [
                "-Wall",
                "-O0",
                "-I",
                "Libs",
                "-g3",
                "Converters/*.c",
                "Models/*.c",
                "*.c",
                "-o",
                "${workspaceFolder}/debug/program.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Create Debug Directory"
            ]
        },
        {
            "label": "Create Build Directory",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (-Not (Test-Path 'build')) { New-Item -ItemType Directory -Path 'build' }"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-I",
                "Libs/",
                "Converters/*.c",
                "Models/*.c",
                "*.c",
                "-o",
                "${workspaceFolder}/build/program.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Create Build Directory"
            ]
        },
        {
            "label": "Compile&Run",
            "type": "shell",
            "command": "build/program.exe",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Compile"
            ]
        }
    ]
}